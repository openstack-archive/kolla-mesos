{
    "id": "/{{ deployment_id }}/cinder-volume",
    "instances": 1,
    "mem": 512,
    "cpus": 0.5,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "{{ cinder_volume_image }}:{{ cinder_volume_tag }}",
            "network": "HOST",
            "privileged": true
        },
       "volumes": [
            {
                "containerPath": "/dev",
                "hostPath": "/dev",
                "mode": "RW"
            },
            {
                "containerPath": "/run",
                "hostPath": "/run",
                "mode": "RW"
            }
        ]
    },
    "env": {
        "KOLLA_CONFIG_STRATEGY": "{{ config_strategy }}",
        "KOLLA_CONFIG": "{{ kolla_config }}",
        "KOLLA_GROUP": "cinder",
        "KOLLA_ROLE": "cinder-volume",
        "KOLLA_ZK_HOSTS": "{{ zookeeper_hosts }}",
        "KOLLA_PRIVATE_INTERFACE": "{{ private_interface }}",
        "KOLLA_PUBLIC_INTERFACE": "{{ public_interface }}"
    }
}
