{
    "name": "{{ deployment_id }}-openvswitch-tasks",
    "mem": 512.0,
    "cpus": 1,
    "command": "kolla_start",
    "container": {
        "type": "DOCKER",
        "image": "{{ openvswitch_db_image }}:{{ openvswitch_db_tag }}",
        "network": "HOST",
        "volumes": [
            {
                "containerPath": "/run",
                "hostPath": "/run",
                "mode": "RW"
            }
        ]
    },
    "environmentVariables": [
        {"name": "KOLLA_CONFIG_STRATEGY", "value": "{{ config_strategy }}"},
        {"name": "KOLLA_CONFIG", "value": "{{ kolla_config }}"},
        {"name": "KOLLA_GROUP", "value": "neutron"},
        {"name": "KOLLA_ROLE", "value": "neutron_openvswitch_tasks"},
        {"name": "KOLLA_ZK_HOSTS", "value": "{{ zookeeper_hosts }}"},
        {"name": "KOLLA_PRIVATE_INTERFACE", "value": "{{ private_interface }}"},
        {"name": "KOLLA_PUBLIC_INTERFACE", "value": "{{ public_interface }}"}]
}
